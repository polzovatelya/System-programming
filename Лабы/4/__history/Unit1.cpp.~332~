//---------------------------------------------------------------------------

void __fastcall TForm1::FormPaint(TObject *Sender)
{
    if (pic)  Sun();
	if (graf) Draw_Graf();
	if (fig) Draw_Fig();
	if (background) DrawBackground();
	if (krug_bool) Krug();


	Draw_But();
}
